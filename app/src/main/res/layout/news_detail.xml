<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_20dp" />

    <TextView
        android:id="@+id/news_detail_title"
        style="@style/NewsTitleFont"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:gravity="start"
        android:lineSpacingExtra="10sp"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Спонсоры отремонтируют школу-интернат" />

    <ImageView
        android:id="@+id/news_detail_calendar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:scaleType="center"
        android:src="@drawable/ic_calendar"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/news_detail_title"
        app:tint="@color/grey"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/news_detail_date"
        style="@style/NewsDetailDateFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        app:layout_constraintBottom_toBottomOf="@id/news_detail_calendar_icon"
        app:layout_constraintStart_toEndOf="@id/news_detail_calendar_icon"
        app:layout_constraintTop_toTopOf="@id/news_detail_calendar_icon"
        tools:text="Осталось 13 дней (21.09 – 20.10)" />

    <include layout="@layout/news_detail_contacts" />

    <include layout="@layout/news_detail_contents" />

    <include layout="@layout/news_detail_participants" />

</androidx.constraintlayout.widget.ConstraintLayout>