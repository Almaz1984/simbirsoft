<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/help_category_tile_width"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_8dp"
    android:layout_marginTop="@dimen/margin_8dp"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/help_category_image"
        android:layout_width="@dimen/help_category_image_width"
        android:layout_height="@dimen/help_category_image_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_12dp"
        android:contentDescription="@string/help_category_image"
        android:src="@drawable/category_kids"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/help_category_title"
        style="@style/HelpCategoryItemFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:text="@string/kids"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_category_image" />

</androidx.constraintlayout.widget.ConstraintLayout>