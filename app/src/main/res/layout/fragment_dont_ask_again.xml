<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <ImageView
        android:id="@+id/rationale_image"
        android:layout_width="@dimen/camera_icon_size"
        android:layout_height="@dimen/camera_icon_size"
        android:layout_marginTop="@dimen/margin_83dp"
        android:contentDescription="@string/camera_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_photo" />

    <TextView
        android:id="@+id/rationale_title"
        style="@style/RationaleTitleFont"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_30dp"
        android:layout_marginVertical="@dimen/margin_15dp"
        android:text="@string/camera_dont_ask_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rationale_image" />

    <TextView
        android:id="@+id/rationale_text"
        style="@style/RationaleTextFont"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_50dp"
        android:text="@string/camera_dont_ask_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rationale_title"
        app:layout_constraintVertical_bias="@dimen/bias_0" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="@string/camera_dont_ask_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rationale_text" />

</androidx.constraintlayout.widget.ConstraintLayout>