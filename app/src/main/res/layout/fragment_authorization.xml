<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_20dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/authorization_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            android:id="@+id/authorization_toolbar_title"
            style="@style/ToolbarFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/authorization_toolbar_text"
            android:textColor="@color/white"
            android:textStyle="normal" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/oauth_authorization_description"
        style="@style/AuthorizationDescriptionFont"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_36dp"
        android:layout_marginTop="@dimen/margin_40dp"
        android:layout_marginEnd="@dimen/margin_34dp"
        android:text="@string/oauth_authorization_description_text"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/authorization_toolbar" />

    <LinearLayout
        android:id="@+id/oauth_sites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oauth_authorization_description">

        <ImageView
            android:id="@+id/vk_icon"
            android:layout_width="@dimen/social_icon_size"
            android:layout_height="@dimen/social_icon_size"
            android:src="@drawable/ic_vk"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ok_icon"
            android:layout_width="@dimen/social_icon_size"
            android:layout_height="@dimen/social_icon_size"
            android:layout_marginStart="@dimen/margin_40dp"
            android:layout_marginEnd="@dimen/margin_40dp"
            android:src="@drawable/ic_ok"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/fb_icon"
            android:layout_width="@dimen/social_icon_size"
            android:layout_height="@dimen/social_icon_size"
            android:src="@drawable/ic_fb"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_authorization_description"
        style="@style/AuthorizationDescriptionFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40dp"
        android:text="@string/app_authorization_description_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oauth_sites" />

    <TextView
        android:id="@+id/mail_info"
        style="@style/AuthorizationCredentialsTitleFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="@string/mail_info_text"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/app_authorization_description" />

    <EditText
        android:id="@+id/input_email"
        style="@style/AuthorizationCredentialsEditFont"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:autofillHints="no"
        android:hint="@string/input_mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/mail_info" />

    <TextView
        android:id="@+id/password_info"
        style="@style/AuthorizationCredentialsTitleFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_info_text"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/input_email" />

    <EditText
        android:id="@+id/input_password"
        style="@style/AuthorizationCredentialsEditFont"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:autofillHints="no"
        android:hint="@string/input_password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/password_info" />

    <ImageView
        android:id="@+id/open_icon"
        android:layout_width="@dimen/password_icon_size"
        android:layout_height="@dimen/password_icon_size"
        android:layout_marginEnd="@dimen/margin_14dp"
        android:src="@drawable/ic_open"
        app:layout_constraintBottom_toBottomOf="@id/input_password"
        app:layout_constraintEnd_toStartOf="@id/close_icon"
        app:layout_constraintTop_toTopOf="@id/input_password"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/close_icon"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/input_password"
        app:layout_constraintEnd_toEndOf="@id/input_password"
        app:layout_constraintTop_toTopOf="@id/input_password"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@id/login_button"
        style="@style/AuthorizationButtonFont"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/leaf"
        android:enabled="false"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/log_in"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/input_password" />

    <TextView
        android:id="@+id/forgot_password_link"
        style="@style/AuthorizationLinkFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="@string/forgot_password"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

    <TextView
        android:id="@+id/sign_up_link"
        style="@style/AuthorizationLinkFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="@string/sign_up"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintTop_toBottomOf="@id/login_button" />

</androidx.constraintlayout.widget.ConstraintLayout>