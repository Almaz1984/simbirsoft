<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/leaf</item>
        <item name="colorPrimaryVariant">@color/leaf_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/leaf_600</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/cool_grey</item>
    </style>

    <style name="ToolbarFont">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">21sp</item>
        <item name="fontFamily">@font/officina_sans_extra_bold_scc</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProfileDefaultFont">
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProfileNameFont">parent="ProfileDefaultFont">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ProfileGrayTextFont">parent="ProfileDefaultFont">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black38</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ProfileButtonFont">
        <item name="android:gravity">start</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigationTheme" parent="AppTheme">
        <item name="colorPrimary">@color/black40</item>
        <item name="android:textColorSecondary">@color/leaf_600</item>
    </style>

    <style name="SplashScreenFont">
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/officina_sans_extra_bold_scc</item>
        <item name="android:textColor">@color/black70</item>
    </style>

    <style name="ChangeImageFont">
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black87</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="HelpCategoryItemFont">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/officina_sans_extra_bold_scc</item>
        <item name="android:textColor">@color/light_olive_green</item>
    </style>

    <style name="HelpCategoryFont">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="EventTitleFont">
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="RationaleTitleFont">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RationaleTextFont" parent="RationaleTitleFont">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NewsTitleFont">
        <item name="android:gravity">center</item>
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">@font/officina_sans_extra_bold_scc</item>
        <item name="android:textColor">@color/blue_grey</item>
    </style>

    <style name="NewsDescriptionFont">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black70</item>
    </style>

    <style name="NewsDateFont">
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NewsFiltersTitleFont">
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black70</item>
    </style>

    <style name="NewsFilterFont">
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="NewsDetailDateFont">
        <item name="android:gravity">start</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="NewsDetailFont">
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black70</item>
    </style>

    <style name="NewsDetailFundNameFont">
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black60</item>
    </style>

    <style name="NewsDetailBottomBarFont">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
